<?xml version="1.0"?>
<project name="MS2UniversalLauncher" default="main" basedir=".">
	<property name="src.dir" location="src" />
	<property name="build.dir" location="bin" />
	<property name="dist.dir" location="dist" />
	<property name="libs.dir" location="libs" />
	<property name="resources.dir" location="resources" />
	<property name="dist.jarname" value="mineshaftersquared.jar" />
	<property name="manifest.mainclass" value="com.mineshaftersquared.MS2Entry" />
	
	<path id="build.classpath">
		<fileset dir="${libs.dir}">
			<include name="*.jar" />
		</fileset>
	</path>

	<target name="clean" description="Clean build and dist dirs">
		<delete dir="${build.dir}" />
		<delete dir="${dist.dir}" />
	</target>

	<target name="prepare" description="Initialize build and dist dirs">
		<mkdir dir="${build.dir}" />
		<mkdir dir="${dist.dir}" />
	</target>

	<target name="compile" depends="clean, prepare" description="Compile sources">
		<javac srcdir="${src.dir}" destdir="${build.dir}" classpathref="build.classpath" encoding="utf-8" target="1.7" source="1.7" includeantruntime="false"/>
	</target>
	
	<target name="jar" depends="compile, jar.existing" description="Compile and create Jar">
	</target>

	<target name="jar.existing" description="Jar existing class files">
		<jar destfile="${dist.dir}/${dist.jarname}" basedir="${build.dir}" filesetmanifest="skip">
			<manifest>
				<attribute name="Main-Class" value="${manifest.mainclass}" />
			</manifest>
			<zipfileset dir="${resources.dir}" includes="ms2.png" fullpath="com/mineshaftersquared/resources/ms2.png" />
			<zipgroupfileset dir="${libs.dir}" includes="*.jar" />
		</jar>
	</target>
	
	<target name="package" depends="jar, package.existing">
	</target>
	
	<target name="package.existing" description="Package an existing Jar">
		<copy todir="${dist.dir}">
			<fileset dir="${resources.dir}">
				<include name="ms2-run-*.*" />
			</fileset>
		</copy>
	</target>

	<target name="main" depends="package" description="Build and package">
	</target>
</project>
